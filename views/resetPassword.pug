html
    head
        include header
    body.login 
        .contenedor-formulario 
            h1 

            if locals.mensajes
                .alertas
                    each categoria in Object.keys(locals.mensajes) 
                        each error in mensajes[categoria] 
                            .alerta(class=`${categoria}`) 
                                p= error
            form.caja-login(method="POST")
                .campo
                    label(for="password") Password: 
                    input(type="password" id="password" name="password" placeholder="ingrese nueva password" value= mail required)     
                .campo.enviar
                    input.boton(type="submit" value="actualizar password" class="boton")
                .campo
                    a(href="/iniciar-sesion") iniciar sesion


            

